{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es2017"],
        "target": "es2017",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "checkJs": false,
        "declaration": true,
        "moduleResolution": "node",
        "types": ["node"]
    },
    "include": ["./src/*"],
    "exclude": [
        "node_modules",
    ]
}
