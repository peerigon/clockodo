  "compilerOptions": {
    "outDir": "dist",
    "target": "es2015",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    // "allowJs" is currently necessary because we need to transform node_modules, like "map-obj"
    "allowJs": true
  },
  "include": ["./**/*.ts"]
}
