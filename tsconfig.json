{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es2017"],
        "target": "es2017",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "checkJs": false,
        "declaration": true,
        "moduleResolution": "node",
        "types": ["@types/node", "node"],
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["./src/*"],
    "exclude": ["node_modules"]
}
