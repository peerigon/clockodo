{
  "name": "clockodo",
  "version": "4.0.0",
  "description": "Unofficial Node.js SDK for the Clockodo API",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "dev": "npm run build -- -w",
    "lint": "eslint src tests --ext js,ts",
    "test": "jest",
    "test:unit": "jest tests/unit/unit.test.ts",
    "test:types": "tsc --noEmit",
    "posttest": "run-p lint test:types",
    "format": "prettier --write",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peerigon/clockodo.git"
  },
  "keywords": [
    "time tracking",
    "api",
    "sdk"
  ],
  "author": "developers@peerigon.com",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/peerigon/clockodo/issues"
  },
  "homepage": "https://github.com/peerigon/clockodo#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "axios-cache-adapter": "^2.5.0",
    "camelcase-keys": "^6.2.2",
    "qs": "^6.9.4",
    "snakecase-keys": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.2",
    "@types/qs": "^6.9.4",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "dotenv": "^8.0.0",
    "eslint": "^7.9.0",
    "eslint-config-peerigon": "^28.1.4",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "nock": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "dist",
    "plugins"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
